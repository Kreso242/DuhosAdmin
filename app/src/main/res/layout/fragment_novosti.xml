<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NovostiFragment"
    android:background="#FAFDFF">


    <LinearLayout
        android:id="@+id/editTextLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="#FAFDFF"
        android:layout_above="@+id/objaviButton">
        <EditText
            android:id="@+id/editTextNaslov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/no_active_shape"
            android:hint="Naslov"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:padding="15dp"
            android:includeFontPadding="true"
            android:layout_marginBottom="20dp"
            android:textColor="@color/active"
            android:textColorHint="@color/notactive"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="16sp"
            ></EditText>

        <EditText
            android:id="@+id/editTextMedij"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextNaziv"
            android:background="@drawable/no_active_shape"
            android:hint="Medij (Facebook, YouTube, Instagram, Web)"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:padding="15dp"
            android:includeFontPadding="true"
            android:textColor="@color/active"
            android:textColorHint="@color/notactive"
            android:fontFamily="@font/open_sans_regular"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            ></EditText>

        <EditText
            android:id="@+id/editTextLinkNaObjavu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/no_active_shape"
            android:hint="Link na objavu"
            android:singleLine="true"
            android:padding="15dp"
            android:includeFontPadding="true"
            android:layout_marginBottom="20dp"
            android:textColor="@color/active"
            android:textColorHint="@color/notactive"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="16sp"
            ></EditText>

        <EditText
            android:id="@+id/editTextSadrzaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextNaziv"
            android:background="@drawable/no_active_shape"
            android:hint="Kratki sadrÅ¾aj"
            android:inputType="textCapSentences|textMultiLine"
            android:padding="15dp"
            android:includeFontPadding="true"
            android:textColor="@color/active"
            android:textColorHint="@color/notactive"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:gravity="top"
            ></EditText>
    </LinearLayout>

    <ImageButton
        android:id="@+id/objaviButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_buttonobjavi"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#80FFFFFF"
        android:layout_marginBottom="20dp"
        android:gravity="top"
        ></ImageButton>

</RelativeLayout>